      <tr>
        <th>Details</th>
        <th>Images</th>
        <th>Setlist</th>
      </tr>
    </thead>
    <tbody>
      <tr>
	  <td style="vertical-align: top; text-align: left; width: 352px; table-layout: fixed;">
      <!-- DETAILS -->
<div>
