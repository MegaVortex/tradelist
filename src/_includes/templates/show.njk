{% extends "base.njk" %}

{% block title %}{{ show.bands | join(", ") }}{% endblock %}

{% block content %}
<h3>{{ show.bands | join(", ") }}</h3>
<p>{{ show.startDate.day }}.{{ show.startDate.month }}.{{ show.startDate.year }}</p>
<p><strong>Venue:</strong> {{ show.location.venue }}</p>
<p><strong>Event:</strong> {{ show.location.event }}</p>
{% endblock %}